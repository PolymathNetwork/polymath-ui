{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "build/dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "plugins": [
      {
        "transform": "./src/misc/absoluteToRelative.ts",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": ["src/specsInit.ts", "build", "node_modules"]
}
